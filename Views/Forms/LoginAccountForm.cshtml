@model QuizeManagement_Project.Models.LoginAccountModel;

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<main id="main">
    <section class="container min-vh-100 d-flex flex-column align-items-center justify-content-center">
        <div class="row justify-content-center w-100">
            <div class="col-12 col-md-10 col-lg-8 col-xl-6 d-flex flex-column align-items-center justify-content-center mx-auto">

                <!-- Logo Section -->
                <div class="d-flex align-items-center justify-content-between" style="margin-bottom: 40px; margin-left: 25px;">
                    <a class="logo d-flex align-items-center">
                        <img src="~/img/logo.png" alt="Logo">
                        <span class="d-none d-lg-block" style="color:rgb(13, 110, 253)">Quiz Management</span>
                    </a>
                </div>

                <!-- Login Card -->
                <div class="card border-0 shadow-lg rounded-4 w-100" style="max-width: 800px;">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <h2 class="h3 text-primary mb-2">Welcome Back</h2>
                            <p class="text-muted">Please sign in to continue</p>
                        </div>

                        @if (TempData["AuthError"] != null) 
                        {
                            <div class="alert alert-danger" role="alert">
                                @TempData["AuthError"]
                            </div>
                        }

                        <!-- Login Form -->
                        <form asp-controller="Forms" asp-action="LoginAccountAddEdit" method="post" class="row g-3 needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <!-- Username Field -->
                            <div class="col-12">
                                <label for="username" class="form-label fw-bold text-dark">Username</label>
                                <div class="input-group border rounded-3 bg-light">
                                    <span class="input-group-text icon-hover border-0">
                                        <i class="fas fa-user text-primary"></i>
                                    </span>
                                    <input asp-for="Username" type="text"
                                           class="form-control border-0 bg-light py-2"
                                           id="username"
                                           placeholder="Enter username"
                                           required>
                                </div>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <!-- Password Field -->
                            <div class="col-12">
                                <label for="password" class="form-label fw-bold text-dark">Password</label>
                                <div class="input-group border rounded-3 bg-light">
                                    <span class="input-group-text icon-hover border-0">
                                        <i class="fas fa-lock text-primary"></i>
                                    </span>
                                    <input asp-for="Password" type="password"
                                           class="form-control border-0 bg-light py-2"
                                           id="password"
                                           placeholder="Enter password"
                                           required>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Action Buttons -->
                            <div class="col-12 mt-4">
                                <button class="btn btn-primary w-100 rounded-pill py-2 fw-bold hover-transform"
                                        type="submit">
                                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                </button>
                                @* <a asp-controller="Home" asp-action="Index"
                                   class="btn btn-outline-secondary w-100 rounded-pill py-2 fw-bold mt-2 hover-transform">
                                    <i class="fas fa-chart-line me-2"></i>View Dashboard
                                </a> *@
                            </div>

                            <!-- Registration Link -->
                            <div class="col-12 text-center mt-4">
                                <p class="small mb-0">
                                    Don't have an account?
                                    <a href="/Forms/CreateAccountForm" class="text-primary fw-bold text-decoration-none hover-underline">
                                        Create Account
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .card {
        transition: transform 0.3s ease;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .input-group-text {
        min-width: 45px;
        justify-content: center;
        transition: all 0.3s ease;
    }
    .icon-hover {
        background: transparent;
    }

        .icon-hover:hover i {
            color: #0d6efd;
        }

    .form-control {
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: none;
            background-color: #f8f9fa;
        }

    .rounded-4 {
        border-radius: 1.5rem !important;
    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd, #0b5ed7);
        border: none;
        transition: transform 0.3s ease;
    }

    .btn-outline-secondary {
        transition: transform 0.3s ease;
    }
    .hover-transform:hover {
        transform: translateY(-2px);
    }

    .hover-underline {
        position: relative;
    }

        .hover-underline::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 2px;
            bottom: -2px;
            left: 0;
            background: #0d6efd;
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .hover-underline:hover::after {
            transform: scaleX(1);
        }

    .text-danger.small {
        display: block;
        margin-top: 0.25rem;
        font-size: 0.85rem;
    }
</style>